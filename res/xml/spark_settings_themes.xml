<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title=" ">

    <Preference
        android:layout="@layout/spark_themes_header"
        android:selectable="false"/>

    <PreferenceCategory
        android:key="theme_customization_category"
        android:title="@string/theme_customization_category">

        <Preference 
            android:title="Ui Tweaker"
            settings:iconSpaceReserved="false"
            android:summary="Accent Color Ls Clocks and more"
            android:layout="@layout/custom_card_pref"
            android:key="ui_settings_key" 
            android:fragment="com.spark.settings.fragments.UiSettings"/>

        <Preference
            android:key="icon_settings_category"
            android:summary="Tweak Icon related stuff"
            android:layout="@layout/custom_card_pref"
            settings:iconSpaceReserved="false"
            android:fragment="com.spark.settings.fragments.IconSettings"
            android:title="Icons" />

        <PreferenceScreen
            android:key="gvisual"
            settings:iconSpaceReserved="false"
            android:layout="@layout/custom_card_pref"
            android:title="@string/gvisual_title"
            android:summary="@string/gvisual_summary"
            android:fragment="com.spark.settings.fragments.GvisualSettings" />

        <Preference
            android:key="quick_settings_category"
            android:summary="Revamp Your QS"
            android:layout="@layout/custom_card_pref"
            settings:iconSpaceReserved="false"
            android:fragment="com.spark.settings.fragments.QsThemeSettings"
            android:title="@string/quicksettings_title" />

        <Preference 
            android:title="Qs Media Player Settings"
            settings:iconSpaceReserved="false"
            android:summary="Customize your Media player"
            android:layout="@layout/custom_card_pref"
            android:key="media_player_settings_key" 
            android:fragment="com.spark.settings.fragments.MediaPlayerSettings"/>

         <Preference
            android:key="volume_panel_stuff"
            android:summary="Tweak Your Volume Panel"
            android:layout="@layout/custom_card_pref"
            settings:iconSpaceReserved="false"
            android:fragment="com.spark.settings.fragments.VolumeSettings"
            android:title="@string/volume_panel" />

    </PreferenceCategory>

</PreferenceScreen>
