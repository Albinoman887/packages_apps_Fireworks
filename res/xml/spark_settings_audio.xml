<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:title=" "
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

   <!-- Title Header -->
    <Preference
        android:layout="@layout/spark_settings_audio_header"
        android:selectable="false"/>

        <ListPreference
            android:key="ringtone_focus_mode"
            settings:iconSpaceReserved="false"
            android:title="@string/ringtone_focus_mode_title"
            android:entries="@array/ringtone_focus_mode_entries"
            android:entryValues="@array/ringtone_focus_mode_values" />

        <!-- Launch music player when headset is connected -->
        <com.spark.settings.preferences.SystemSettingSwitchPreference
            android:key="headset_connect_player"
            settings:iconSpaceReserved="false"
            android:title="@string/headset_connect_player_title"
            android:summary="@string/headset_connect_player_summary"
            android:defaultValue="false" />

        <com.spark.settings.preferences.SystemSettingSwitchPreference
            android:key="vibrate_on_connect"
            settings:iconSpaceReserved="false"
            android:title="@string/incall_vibrate_connect_title"
            android:defaultValue="true" />

        <com.spark.settings.preferences.SystemSettingSwitchPreference
            android:key="vibrate_on_callwaiting"
            settings:iconSpaceReserved="false"
            android:title="@string/incall_vibrate_call_wait_title"
            android:defaultValue="true" />

        <com.spark.settings.preferences.SystemSettingSwitchPreference
            android:key="vibrate_on_disconnect"
            settings:iconSpaceReserved="false"
            android:title="@string/incall_vibrate_disconnect_title"
            android:defaultValue="true" />
</PreferenceScreen>

