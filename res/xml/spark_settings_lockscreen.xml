<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title=" "
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

   <!-- Title Header -->
    <Preference
        android:layout="@layout/spark_settings_lockscreen_header"
        android:selectable="false"/>

    <PreferenceCategory
        android:key="lockscreen_info_category"
        android:title="@string/lockscreen_info_category_title">

        <com.spark.settings.preferences.SystemSettingSwitchPreference
            android:key="lockscreen_battery_info"
            android:title="@string/lockscreen_battery_info_title"
            android:summary="@string/lockscreen_battery_info_summary"
            android:defaultValue="true" />

        <com.spark.settings.preferences.SystemSettingListPreference
            android:key="lockscreen_charging_animation_style"
            android:title="@string/lockscreen_charging_animation_title"
            android:entries="@array/lockscreen_charging_animation_entries"
            android:entryValues="@array/lockscreen_charging_animation_values"
            android:defaultValue="1" />

        <com.spark.settings.preferences.SystemSettingSwitchPreference
            android:key="charging_animation"
            android:title="@string/charging_animation_title"
            android:summary="@string/charging_animation_summary"
            android:defaultValue="true" />

      <Preference
            android:title="@string/lockscreen_tuner_title"
            android:summary="@string/lockscreen_tuner_summary">
            <intent android:action="android.intent.action.MAIN"
                android:targetPackage="com.android.systemui"
                android:targetClass="com.android.systemui.tuner.LockscreenActivity" />
        </Preference> 

        <com.spark.settings.preferences.SystemSettingSeekBarPreference
            android:key="lockscreen_blur"
            android:title="@string/lockscreen_blur_title"
            android:summary="@string/lockscreen_blur_summary"
            android:defaultValue="0"
            android:max="100"
            settings:min="0"
            settings:units="%" />

        <com.spark.settings.preferences.SystemSettingSwitchPreference
            android:key="lock_screen_custom_notif"
            android:title="@string/lockscreen_maxnotif_title"
            android:summary="@string/lockscreen_maxnotif_sumary"
            android:defaultValue="false" />

        <com.spark.settings.preferences.CustomSeekBarPreference
            android:key="lockscreen_max_notif_cofig"
            android:title="@string/lockscreen_maxnotif_config"
            android:max="6"
            settings:min="1"
            settings:unitsLeft=""
            settings:unitsRight=""
            android:persistent="false"
            android:dependency="lock_screen_custom_notif" />

    <PreferenceCategory
        android:key="lock_aod_icons"
        android:title="@string/lock_aod_icons_title">

        <com.spark.settings.preferences.SystemSettingSwitchPreference
            android:key="ambient_icons_lockscreen"
            android:title="@string/ambient_icons_lockscreen_title"
            android:summary="@string/ambient_icons_lockscreen_summary"
            android:defaultValue="false" />

        <com.spark.settings.preferences.SystemSettingSeekBarPreference
            android:key="ambient_icons_size"
            android:title="@string/ambient_icons_size_title"
            android:dependency="ambient_icons_lockscreen"
            settings:allowEditText="true"
            android:max="80"
            android:min="0"
            settings:units="dp"
            settings:interval="1"
            android:defaultValue="80" />

    </PreferenceCategory>

        <com.spark.settings.preferences.SystemSettingSwitchPreference
            android:key="lockscreen_status_bar"
            android:title="@string/lockscreen_status_bar_title"
            android:summary="@string/lockscreen_status_bar_summary"
            android:defaultValue="true" />

        <com.spark.settings.preferences.SecureSettingSwitchPreference
            android:key="hide_lockicon"
            android:title="@string/hide_lockicon_title"
            android:summary="@string/hide_lockicon_summary"
            android:defaultValue="true" />

        <com.spark.settings.preferences.SystemSettingSwitchPreference
            android:key="lock_fp_icon"
            android:title="@string/lock_fp_icon_title"
            android:summary="@string/lock_fp_icon_summary"
            android:defaultValue="false" />

        <com.spark.settings.preferences.SystemSettingSwitchPreference
            android:key="pocket_judge"
            android:title="@string/pocket_judge_title"
            android:summary="@string/pocket_judge_summary"
            android:defaultValue="false" />

    </PreferenceCategory>

    <Preference
        android:key="always_on_display_schedule"
        android:title="@string/always_on_display_schedule_title"
        android:fragment="com.spark.settings.fragments.AODSchedule" />

    <SwitchPreference
        android:key="fingerprint_success_vib"
        android:title="@string/fprint_sucess_vib_title"
        android:summary="@string/fprint_sucess_vib_summary"
        android:persistent="false" />

    <!-- FOD customization options -->
    <PreferenceCategory
        android:key="fod_icon_picker"
        android:title="@string/fod_icon_picker_category_title">

        <!-- Animated FOD icon -->
        <com.spark.settings.preferences.SystemSettingSwitchPreference
            android:key="fod_icon_animation"
            android:title="@string/fod_icon_animation"
            android:summary="@string/fod_icon_animation_summary"
            android:defaultValue="false" />

        <com.spark.settings.preferences.SystemSettingListPreference
            android:key="fod_icon_anim_type"
            android:title="@string/fod_icon_animation_effect_title"
            android:summary="%s"
            android:entries="@array/fod_icon_animation_entries"
            android:entryValues="@array/fod_icon_animation_values"
            android:defaultValue="0"
            android:dependency="fod_icon_animation" />

        <!-- FOD icon picker -->
        <Preference
            android:key="fod_icon_picker_category"
            android:title="@string/fod_icon_picker_title"
            android:summary="@string/fod_icon_picker_summary"
            android:fragment="com.spark.settings.fragments.FODIconPickerFragment" />

        <!-- FOD pressed color -->
        <com.spark.settings.preferences.SystemSettingListPreference
            android:key="fod_color"
            android:dialogTitle="@string/fod_pressed_color_title"
            android:title="@string/fod_pressed_color_title"
            android:summary="%s"
            android:entries="@array/fod_pressed_color_entries"
            android:entryValues="@array/fod_pressed_color_values"
            android:defaultValue="@*android:integer/config_fod_pressed_color" />

        <!-- Screen off fod -->
        <com.spark.settings.preferences.SystemSettingSwitchPreference
            android:key="fod_gesture"
            android:title="@string/fod_gesture_title"
            android:summary="@string/fod_gesture_summary"
            android:defaultValue="false"
            settings:controller="com.android.settings.security.screenlock.ScreenOffFodPreferenceController" />

     </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/fod_recog_animation"
        android:key="fod_animations">

        <!-- FOD recognizing animation -->
        <com.spark.settings.preferences.SystemSettingSwitchPreference
            android:key="fod_recognizing_animation"
            android:title="@string/fod_recog_animation"
            android:summary="@string/fod_recog_animation_summary"
            android:defaultValue="false" />

        <com.spark.settings.preferences.SystemSettingListPreference
            android:key="fod_anim"
            android:title="@string/fod_recog_animation_effect_title"
            android:summary="%s"
            android:entries="@array/fod_recog_animation_entries"
            android:entryValues="@array/fod_recog_animation_values"
            android:defaultValue="0"
            android:dependency="fod_recognizing_animation" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="lockscreen_media_category"
        android:title="@string/lockscreen_media_category">

        <com.spark.settings.preferences.SystemSettingSwitchPreference
            android:key="lockscreen_media_metadata"
            android:title="@string/media_art_title"
            android:summary="@string/media_art_summary"
            android:defaultValue="true" />

        <com.spark.settings.preferences.SystemSettingListPreference
            android:key="lockscreen_albumart_filter"
            android:title="@string/lockscreen_albumart_filter_title"
            android:entries="@array/lockscreen_albumart_filter_entries"
            android:entryValues="@array/lockscreen_albumart_filter_values"
            android:dependency="lockscreen_media_metadata"
            android:defaultValue="0" />

        <Preference
            android:key="lockscreen_visualizer"
            android:fragment="com.spark.settings.fragments.Visualizer"
            android:title="@string/lockscreen_visualizer_enable"
            android:summary="@string/lockscreen_visualizer_enable_summary" />

        <com.spark.settings.preferences.SystemSettingSeekBarPreference
            android:key="lockscreen_media_blur"
            android:title="@string/lockscreen_media_blur_title"
            android:max="100"
            android:min="5"
            settings:units="%"
            settings:interval="5"
            android:defaultValue="100"
            android:dependency="lockscreen_media_metadata" />

    </PreferenceCategory>

</PreferenceScreen>
