<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title=" "
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

   <!-- Title Header -->
    <Preference
        android:layout="@layout/spark_settings_lockscreen_header"
        android:selectable="false"/>

        <Preference 
            android:title="LS Charging"
            settings:iconSpaceReserved="false"
            android:summary="Charging Info and Animations"
            android:layout="@layout/custom_card_pref"
            android:key="charging_settings_key" 
            android:fragment="com.spark.settings.fragments.ChargingSettings"/>

        <Preference 
            android:title="Fod Settings"
            settings:iconSpaceReserved="false"
            android:summary="Fod Icons Animations and more"
            android:layout="@layout/custom_card_pref"
            android:key="fod_settings_key" 
            android:fragment="com.spark.settings.fragments.FodSettings"/>

        <Preference 
            android:title="LS Extras"
            settings:iconSpaceReserved="false"
            android:summary="Some more extra tweaks"
            android:layout="@layout/custom_card_pref"
            android:key="ui_settings_key" 
            android:fragment="com.spark.settings.fragments.LsExtraSettings"/>

        <Preference 
            android:title="LS Music"
            settings:iconSpaceReserved="false"
            android:summary="Album art Visualizer and more"
            android:layout="@layout/custom_card_pref"
            android:key="music_settings_key" 
            android:fragment="com.spark.settings.fragments.MusicSettings"/>

        <Preference 
            android:title="LS Notifications"
            settings:iconSpaceReserved="false"
            android:summary="Notification count and more"
            android:layout="@layout/custom_card_pref"
            android:key="ui_settings_key" 
            android:fragment="com.spark.settings.fragments.LsNotificationSettings"/>

      <Preference
            android:title="@string/lockscreen_tuner_title"
            android:summary="@string/lockscreen_tuner_summary"
            android:layout="@layout/custom_card_pref"
            settings:iconSpaceReserved="false">
            <intent android:action="android.intent.action.MAIN"
                android:targetPackage="com.android.systemui"
                android:targetClass="com.android.systemui.tuner.LockscreenActivity" />
        </Preference> 

       <Preference
            android:layout="@layout/custom_card_pref"
            settings:iconSpaceReserved="false"
            android:key="always_on_display_schedule"
            android:title="@string/always_on_display_schedule_title"
            android:fragment="com.spark.settings.fragments.AODSchedule" />

</PreferenceScreen>
